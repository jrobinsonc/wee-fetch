    "isolatedModules": true, // Required by vitejs (https://vitejs.dev/guide/features.html#typescript-compiler-options).
    "target": "ES6",
    "useDefineForClassFields": true,
    "strict": true,
    "sourceMap": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
